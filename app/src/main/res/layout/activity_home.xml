<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".views.activities.home.HomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_weight="1"
        android:elevation="@dimen/_50sdp"
        app:cardBackgroundColor="@color/backgroundbtn"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardMaxElevation="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"
            android:text="Looking for a local friend??"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_weight="1"
        android:elevation="@dimen/_50sdp"
        app:cardBackgroundColor="@color/backgroundbtn"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardMaxElevation="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:padding="@dimen/_10sdp"
            android:text="Need a Companion"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_weight="1"
        android:elevation="@dimen/_50sdp"
        app:cardBackgroundColor="@color/backgroundbtn"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardMaxElevation="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"
            android:text="Want to join our group??"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_30sdp"
        android:elevation="@dimen/_50sdp"
        app:cardBackgroundColor="@color/backgroundbtn"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardMaxElevation="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:padding="@dimen/_10sdp"
            android:text="Lets make a group??"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

</LinearLayout>